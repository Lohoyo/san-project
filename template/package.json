{
	"name": "{{name}}",
	"version": "1.0.0",
	"private": true,
	"description": "{{ description }}",
	"scripts": {
		"start": "cross-env NODE_ENV=development san serve --config san.config.js",
		"build": "cross-env NODE_ENV=production san build --config san.config.js",
		"analyzer": "cross-env NODE_ENV=production san build --config san.config.js --analyze",
		"build:modern": "cross-env NODE_ENV=production san build --config san.config.js --modern",
		"lint": "npm run lint-eslint && npm run lint-stylelint",
    	"lint-eslint": "eslint -c .eslintrc.js --ext .ts,.tsx,.js src",
    	"lint-stylelint": "stylelint --config .stylelintrc.json src/**/*.{less,css,scss}"
	},
	"keywords": [
		"San",
		"San CLI"
	],
	{{#lintHook}}
	"lint-staged": {
			{{#if_eq lintConfig "ecomfe"}}
			{{#if_eq cssPreprocessor "less"}}
			"src/**/*.(css|less|scss)": [
				"stylelint"
			],
			{{/if_eq}}
			{{#if_eq cssPreprocessor "sass"}}
			"src/**/*.(css|less|scss)": [
				"stylelint"
			],
			{{/if_eq}}
			{{/if_eq}}
			"(scripts|src)/**/*.{ts,tsx,js}": [
				"eslint --fix"
			]
		},
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    {{/lintHook}}
	"author": "{{author}}",
	"license": "MIT",
	"devDependencies": {
		{{#lint}}
		"@babel/eslint-parser": "^7.15.4",
		"@babel/eslint-plugin": "^7.14.5",
		{{#ts}}
		"@babel/preset-typescript": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.31.2",
		"@typescript-eslint/parser": "^4.31.2",
		{{/ts}}
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-prettier": "^3.1.2",
		"prettier": "^2.0.5",
		"eslint": "^7.32.0",
		{{#if_eq lintConfig "standard"}}
		"eslint-config-standard": "^14.1.1",
		"eslint-plugin-promise": "^4.2.0",
		"eslint-plugin-standard": "^4.0.1",
		"eslint-plugin-node": "^5.2.0",
		{{/if_eq}}
		{{#if_eq lintConfig "airbnb"}}
		"eslint-config-airbnb-base": "^14.1.0",
		{{/if_eq}}
		{{#if_eq lintConfig "ecomfe"}}
		"@ecomfe/eslint-config": "^7.3.0",
		{{#if_eq cssPreprocessor "less"}}
		"@ecomfe/stylelint-config": "^1.1.2",
		"stylelint": "^13.13.1",
		{{/if_eq}}
		{{#if_eq cssPreprocessor "sass"}}
		"@ecomfe/stylelint-config": "^1.1.2",
		"stylelint": "^13.13.1",
		{{/if_eq}}
		{{/if_eq}}
		{{/lint}}
		{{#if_eq tplEngine "smarty"}}
		"hulk-mock-server": "^0.1.0",
		{{/if_eq}}
		{{#lintHook}}
		"husky": "^4.2.3",
		"lint-staged": "^10.0.9",
		{{/lintHook}}
		{{#if_eq cssPreprocessor "less"}}
		"less": "^4.1.1",
    	"less-loader": "^10.0.1",
		{{/if_eq}}
		{{#if_eq cssPreprocessor "sass"}}
		"sass": "^1.19.0",
		"sass-loader": "^10.1.1",
		{{/if_eq}}
		{{#if_eq cssPreprocessor "stylus"}}
		"stylus": "^0.54.8",
		"stylus-loader": "^4.3.3",
		{{/if_eq}}
		{{#ts}}
		"typescript": "^4.4.3",
		{{/ts}}
		"babel-plugin-import": "^1.13.0",
		"cross-env": "^7.0.2",
		"postcss-import": "^14.0.2",
		"postcss-url": "^10.1.3",
		"san-cli": "^4.1.0"
	},
	"dependencies": {
		"axios": "^0.21.1",
		{{#if_eq demoType "store"}}
		"san-store": "1.1.0",
		"san-update": "^2.1.0",
		{{/if_eq}}
		"san": "^3.10.0"
	}
}
